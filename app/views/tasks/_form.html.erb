<%= form_for @task do |f| %>

  <div class="row">
    <div class="card-panel">
      <table>
        <tr>
          <th><%= f.label :label_cd, 'ラベル' %></th>
          <td><%= select_tag 'label_cd', options_for_select(@label_select_options), :include_blank => true %></td>
          </td>
        </tr>
        <tr>
          <th><%= f.label :task_nm, 'タスク名' %></th>
          <td>
            <%= f.text_field :task_nm, 'data-length': 20, maxlength: 20 %>
            <span class="caution">20文字以下を入力</span>
          </td>
        </tr>
        <tr>
          <th><%= f.label :task, 'タスク' %></th>
          <td>
            <%= f.text_field :task, 'data-length': 100, maxlength: 100 %>
            <span class="caution">100文字以下を入力</span>
          </td>
        </tr>
        <tr>
          <th><%= f.label :deadline, '期限' %></th>
          <td>
            <%= f.text_field :deadline, 'data-length': 20, maxlength: 20 %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :priority_cd, '優先度' %></th>
          <td><%= select_tag 'priority_cd', options_for_select(@priority_select_options), :include_blank => true %></td>
          </td>
        </tr>
      </table>

      <div class="footer-button">
        <button type="submit" name="action" class="btn waves-effect waves-light" tabindex="-1">登録</button>
      </div>
      
      <div class="footer-button">
        <%= link_to "戻る", tasks_path, class:"btn btn-default", style:"width:150px;display:block;margin:auto" %>
      </div>

    </div>
  </div>
<% end %>
