<div class="row">
  <div class="section">
    <h4>ラベル新規登録</h4>
  </div>
  
  <div id="flash-error">
    <% flash.each do |name, message| %>
      <p class="card <%= name %>"><%= message %></p>
    <% end %>
  </div>
  
<%= form_for @label do |f| %>
    <% if @label.errors.any? %>
      <div id="validation-errors" class="card">
        <div id="validation-error-title"><%= @label.errors.count %> 件のエラーが発生しました</div>
        <div id="validation-error-content">
          <ul>
            <% @label.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

  <div class="input-form">
    <div class="card-panel">
      <table>
        <tr>
          <th class="label-nm"><%= f.label :label_cd, 'ラベルコード' %></th>
          <td>
            <%= f.text_field :label_cd, 'data-length': 4, maxlength: 4 %>
            <br><span class="caution">4文字以下の数字を入力</span>
          </td>
        </tr>
        <tr>
          <th class="label-nm"><%= f.label :label_nm, 'ラベル名' %></th>
          <td>
            <%= f.text_field :label_nm, 'data-length': 50, maxlength: 20 %>
            <br><span class="caution"></span>
          </td>
        </tr>
      </table>
      <div class="footer-button">
        <button type="submit" name="action" class="btn waves-effect waves-light" tabindex="-1">登録</button>
      </div>
    </div>
          
    <div class="footer-button">
      <%= link_to "戻る", labels_path, class:"btn btn-default", style:"width:150px;display:block;margin:auto" %>
    </div>
  </div>
<% end %>
</div>
